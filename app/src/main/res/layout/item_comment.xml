<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="8dp"
    android:background="#FFFFFF">


    <!--private String id;-->
    <!--private User author;-->
    <!--private String rating;-->
    <!--private String useful_count;-->
    <!--private String subject_id;-->
    <!--private String content;-->
    <LinearLayout
        android:layout_marginTop="4dp"
        android:id="@+id/linelayout_comment_top"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="18dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_comment_top"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:text="评论"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <ImageView
            android:layout_marginTop="8dp"
            android:background="#CCCCCC"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/linelayout_comment_click"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_comment_avator"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_comment_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <cn.boji9.starbar.StarBar
                        android:id="@+id/starbar_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:text="2017-07-11 23:33:39"
                        android:id="@+id/tv_comment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:padding="12dp"
            android:textSize="15sp"
            android:text="周末有空跑去HK看了电影，感觉又是漫威一贯彩蛋满满的套路，在这里分享一下发现的细节。 剧透是肯定有的，注意回避！ 开场LOGO的音乐是蜘蛛侠动画版的经典旋律，焕然一新的感觉，十分震撼！ Tony在车里提到让Peter做一个friendly neighborhood Spiderman，这是蜘蛛侠的经典标语..."
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>